title: |md
  # Graduated Activation Protocol
| {
  near: top-center
  shape: text
  style.font-size: 20
}

direction: right

Activation: {
  label: "ðŸ“Š Graduated Activation"
  style.border-radius: 8
  style.shadow: true
  style.fill: "#f5f5f5"
  style.stroke: "#9e9e9e"

  CHECK: {
    label: "Pre-Activation\nCheck\n(all 6 criteria)"
    style.border-radius: 6
    style.fill: "#fff59d"
    style.stroke: "#f9a825"
  }
  ADV: {
    label: "Advisory Mode\nL4.8 outputs visible\nbut NOT acted upon\n(200 cycles)"
    style.border-radius: 6
    style.fill: "#bbdefb"
    style.stroke: "#1976d2"
  }
  HALF: {
    label: "50% Authority\nL4.8 suggestions\nweighted 50%\n(300 cycles)"
    style.border-radius: 6
    style.fill: "#ffe0b2"
    style.stroke: "#ef6c00"
  }
  FULL: {
    label: "Full Authority\nL4.8 drives\nstrategic decisions"
    style.border-radius: 6
    style.fill: "#c8e6c9"
    style.stroke: "#2e7d32"
    style.stroke-width: 2
  }
}

Activation.CHECK -> Activation.ADV: "all pass" {style.animated: true}
Activation.ADV -> Activation.HALF: "stable" {style.animated: true}
Activation.HALF -> Activation.FULL: "stable" {style.animated: true}
Activation.ADV -> Activation.CHECK: "instability" {style.stroke-dash: 5}
Activation.HALF -> Activation.ADV: "instability" {style.stroke-dash: 5}
